    {
      "content" : [
        {
          "anchor" : "discussion",
          "level" : 2,
          "text" : "Discussion",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Drag motions:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "The view converts vertical drag distance into an inclination above, or below, the target location, clamped to directly above and below it.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "The view converts horizontal drag distance into a rotational angle, orbiting the target location.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "A magnify gesture zooms in, or out, from the target location.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "inlineContent" : [
            {
              "text" : "Keyboard motions:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "The right-arrow and ",
                      "type" : "text"
                    },
                    {
                      "code" : "d",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " keys rotate the camera to the right around the location.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "The left-arrow and ",
                      "type" : "text"
                    },
                    {
                      "code" : "a",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " keys rotate the camera to the left around the location.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "The up-arrow and ",
                      "type" : "text"
                    },
                    {
                      "code" : "w",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " keys rotate the camera upward around the location, clamped to a maximum of directly above the location.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "The down-arrow and ",
                      "type" : "text"
                    },
                    {
                      "code" : "s",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " keys rotate the camera downward around the location, clamped to a minimum of directly below the location.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        }
      ],
